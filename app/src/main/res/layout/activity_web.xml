<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Web">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </WebView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#010204"
        android:orientation="horizontal">


        <Button
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/profile_logo"
            android:layout_marginHorizontal="5sp"
            android:backgroundTint="@color/purple_700"
            android:onClick="Profile"
            android:text="Profile"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_news"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8sp"
            android:drawableEnd="@drawable/news_logo"
            android:backgroundTint="@color/purple_700"
            android:text="News"
            android:onClick="news"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button_logout"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0sp"
            android:drawableEnd="@drawable/logout_logo"
            android:backgroundTint="@color/purple_700"
            android:text="Log Out"
            android:onClick="logout"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>